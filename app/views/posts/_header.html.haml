.mainbox
  .mainbox__top
    .mainbox__top__left
      = link_to image_tag("mori.png",size:"100x50"), root_path
    .mainbox__top__centar
      %form.mainbox__top__center__serch
        %input.mainbox__top__center__serch__form{placeholder: "キーワード入力", type: "text"}/
        %button.mainbox__top__center__serch__button{type:"submit"}
          %i.fas.fa-search

    .mainbox__top__right
      %ul.mainbox__top__right__nav
        - if user_signed_in?
          %li.mainbox__top__right__nav__post
            = link_to '投稿する', "posts/new"
          %li.mainbox__top__right__nav__mypage
            = link_to 'プロフィール', "/users/#{current_user.id}"
          %li.mainbox__top__right__nav__post
            = link_to "ログアウト",destroy_user_session_path, method: :delete 
        - else 
          %li.mainbox__top__right__nav__post
            = link_to '新規登録', new_user_registration_path
          %li.mainbox__top__right__nav__post
            = link_to 'ログイン',new_user_session_path




